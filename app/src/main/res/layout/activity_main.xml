<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="230dp" tools:layout_editor_absoluteX="70dp" android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            app:layout_constraintRight_toLeftOf="@id/guideline2"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="230dp" tools:layout_editor_absoluteX="214dp" android:id="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@id/guideline2"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="381dp" tools:layout_editor_absoluteX="77dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintRight_toLeftOf="@id/guideline2"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            tools:layout_editor_absoluteY="394dp" tools:layout_editor_absoluteX="221dp" android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintLeft_toRightOf="@id/guideline2"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>