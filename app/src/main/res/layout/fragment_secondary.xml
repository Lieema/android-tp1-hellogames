<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SecondaryFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SecondActivity">

            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline3"
                    app:layout_constraintGuide_percent="0.13"/>
            <TextView
                    android:text="Game Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="175dp" android:id="@+id/textView"
                    app:layout_constraintBottom_toBottomOf="@id/guideline3"
                    android:gravity="center"
                    android:textSize="36sp"
                    android:textStyle="bold|italic"
                    android:textColor="#00BCD4"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline4"
                    app:layout_constraintGuide_percent="0.5"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                    tools:layout_editor_absoluteY="108dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@id/guideline3"
                    app:layout_constraintRight_toRightOf="@id/guideline4"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"/>
            <TextView
                    android:text="Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toTopOf="@id/guideline3"
                    app:layout_constraintLeft_toLeftOf="@id/guideline4" android:textStyle="bold"/>
            <TextView
                    android:text="Type:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/textView2"
                    app:layout_constraintLeft_toLeftOf="@id/guideline4" android:textStyle="bold"/>
            <TextView
                    android:text="Nb players:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/textView3"
                    app:layout_constraintLeft_toLeftOf="@id/guideline4" android:textStyle="bold"/>
            <TextView
                    android:text="Year:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:layout_constraintLeft_toLeftOf="@id/guideline4" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameText" app:layout_constraintStart_toEndOf="@+id/textView2"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/guideline3"
                    app:layout_constraintLeft_toRightOf="@id/textView2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeText"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/nameText"
                    app:layout_constraintLeft_toRightOf="@id/textView3" android:textColor="#A8A8A8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nbplayersText"
                    android:layout_margin="5dp"
                    app:layout_constraintLeft_toRightOf="@id/textView4"
                    app:layout_constraintTop_toBottomOf="@id/typeText" android:textColor="#A8A8A8"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearText"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/nbplayersText"
                    app:layout_constraintLeft_toRightOf="@id/textView5" android:textColor="#A8A8A8"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="163dp" android:id="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@id/guideline5"
                    app:layout_constraintBottom_toTopOf="@id/guideline6"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline5"
                    app:layout_constraintGuide_percent="0.5"/>
            <Button
                    android:text="DO YOU WANT TO KNOW MORE ?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    app:layout_constraintTop_toBottomOf="@id/guideline6"
                    app:layout_constraintLeft_toLeftOf="@id/guideline4"
                    app:layout_constraintRight_toRightOf="@id/guideline4"
                    android:gravity="center"
                    android:autoSizeTextType="uniform" android:textStyle="bold"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/guideline6"
                    app:layout_constraintGuide_percent="0.8"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>